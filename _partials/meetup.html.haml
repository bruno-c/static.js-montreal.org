- meetup = page.meetup
- first  = meetup.speakers.first
- second = meetup.speakers.last
- date   = Date.parse( meetup["on"] )
.row
  .span12.blurb
    %h2<
      = Date.parse( meetup["on"] ).strftime("%A, %B %d")
      %span.year<
        = ', ' + Date.parse( meetup["on"] ).strftime("%Y")
    %h3<
      &laquo;
      = meetup["title"]
      &raquo;
    - if meetup["blurb"]
      %p= meetup["blurb"]
.row.meetup
  .span6
    = partial 'speaker.html.haml', 'speaker' => first
  .span6
    - if first != second
      = partial 'speaker.html.haml', 'speaker' => second
